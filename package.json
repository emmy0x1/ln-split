{
  "name": "ln-api-boilerplate",
  "version": "0.0.1",
  "description": "a lightning-network enabled boilerplate express API",
  "main": "src/index.js",
  "scripts": {
    "build": "gulp",
    "start": "nodemon --ext ts --watch ./src --exec \"npm run dev\"",
    "test": "NODE_ENV=test mocha 'test/**/*.test.ts'",
    "dev": "ts-node --type-check src/index.ts",
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts' --fix",
    "clean": "rm -rf ./build"
  },
  "author": "RadarTech",
  "license": "MIT",
  "dependencies": {
    "@radartech/lnrpc": "^0.5.1-beta",
    "bignumber.js": "^8.0.2",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.1",
    "helmet": "^3.12.1",
    "morgan": "^1.9.0",
    "ts-node": "^8.0.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@radarrelay/tslint-config": "^5.0.0",
    "@types/body-parser": "1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.5",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/debug": "^0.0.30",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.1",
    "gulp": "^4.0.0",
    "gulp-json-minify": "^1.2.2",
    "gulp-typescript": "^5.0.0-alpha.3",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.17.5",
    "prettier": "^1.14.3",
    "tslint": "^5.10.0",
    "typescript": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint",
      "git add"
    ]
  }
}
